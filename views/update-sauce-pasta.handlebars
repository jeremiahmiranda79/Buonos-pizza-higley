<head>
  <link rel="stylesheet" href="/css/updateInformation.css">
</head>

<div class="information-background">
	<div class="container-information-header">
    <center>
      <h1>Update Sauce Pasta</h1>
      <h4>For admin only</h4>
    </center>
  </div>

	<div class="container-update-item">
		<div class="container-fluid item">
			<form id="updateSaucePasta">
				<div class="container py-3">
					<h2 class="">Update ({{sp.name}}) Sauce Pasta</h2>
					<div class="forms">
						<label 
							for="menu-item-name" 
							class="form-label"
						>
							<b>ID</b>
						</label>
						<input 
							id="id" 
							type="text" 
							class="form-control" 
							value="{{sp.id}}" 
							placeholder="{{sp.id}}"
						>
						<label 
							for="menu-item-name" 
							class="form-label"
						>
							<b>Name</b>
							<b style="color:#FF0000";>*required</b>
						</label>
						<input 
							id="name" 
							type="text" 
							class="form-control" 
							value="{{sp.name}}" 
							placeholder="{{sp.name}}"
							required
						>
						<label 
							for="menu-item-description" 
							class="form-label"
						>
							<b>Price 3 OZ</b>
							<b style="color:#FF0000";>*required</b>
						</label>
						<input 
							id="price3oz" 
							type="text" 
							class="form-control" 
							value="{{sp.price3oz}}" 
							placeholder="{{sp.price3oz}}"
							require
						>
						<label 
							for="menu-item-description" 
							class="form-label"
						>
							<b>Price 16 OZ</b>
							<b style="color:#FF0000";>*required</b>
						</label>
						<input 
							id="price16oz" 
							type="text" 
							class="form-control" 
							value="{{sp.price16oz}}" 
							placeholder="{{sp.price16oz}}"
							require
						>
						<input 
							type="hidden" 
							name="sauce-pasta-id" 
							value="{{sp.id}}"
						/>
						<br><br>
					</div>	
					<div class="d-flex justify-content-evenly">
            <button 
							type="submit" 
							class="btn btn-primary"
						>
							Update
						</button>
            <button 
              class="btn btn-warning view-menu-button" onclick="history.back()"
            >
              Cancel
            </button>
            <button 
							class="btn btn-danger"
							id="deleteButton" 
							data-id="{{sp.id}}"
						>
							Delete
						</button>
				</div>
			</form>
		</div>
	</div>
	
	<br><br><br><br><br><br><br><br>
</div>

<script src="/js/updateSaucePasta.js"></script>