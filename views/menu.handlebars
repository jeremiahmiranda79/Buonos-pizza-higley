<!--#region scollable tabs 2 -->
  <div class="main-container" >
    <div class="tab-nav-bar">
      <div class="tab-navigation">
        <i class="uil uil-angle-left left-btn"></i> 
        <i class="uil uil-angle-right right-btn"></i>
        <ul class="tab-menu">
          <li class="tab-btn"><a href="#" class="active">All</a></li>
            {{#each items as |c|}}
              {{#if c.switchy}}
                <li class="tab-btn"><a href="#{{c.id}}">{{c.name}}</a></li>
              {{/if}}
            {{/each}}
        </ul>
      </div>
    </div>
  </div>
<!--#endregion -->

<!--#region if logged in  -->
  {{#if loggedIn}}
    <br><br><br>
    <div class="container-information-header">
      <center>
        <h1>Update Menu </h1>
        <h4>For admin only</h4>
      </center>
    </div>
    <center>
      <a href="/categories/create" class="active btn btn-primary">Create new category</a>
    </center>
    
    <div class="container-menu">
      <br>
      <div class="grid-container-2">
        {{#each items as |c|}}
          {{#if c.switchy}}
            <center>
              <a class="anchor" id="{{c.id}}"></a>
              <h1><strong>{{c.name}}</strong></h1>
              <img src="{{c.image}}" alt="food-image" class="category-image">
              <br><br>
              <a href="/categories/update/{{c.id}}" class="active btn btn-primary">Update catagory ({{c.name}})</a>
              <h1>---------------------------------------------------------</h1>
              <br>
              <a href="/menuitems/create" class="active btn btn-primary">Create new menu item</a>
            </center>
            <br>
            <div class="grid-container">
                {{#each c.menuitems as |i|}}
                  {{#if i.switchy}}
                    <div class="grid-item">
                      <a href="menu/{{i.id}}" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                          <h5 class="mb-1">{{i.name}}</h5>
                        </div>
                        <p class="mb-1">{{i.description}}</p>
                        <center>
                          <a href="/menuitems/update/{{i.id}}" class="active btn btn-primary m-2">Update menu item ({{i.name}})</a>
                        </center>
                      </a>
                    </div>
                  {{else}}
                    <div class="grid-item">
                      <center>
                        <h1 style="color:#FF0000";>
                          <b>({{i.name}}) is currently turned off!</b>
                        </h1>
                        <a href="/menuitems/update/{{i.id}}" class="active btn btn-primary">
                          Toggle  ({{i.name}}) Back On!
                        </a>
                        <center>
                          <h1>--------------</h1>
                        </center>
                        <br>
                      </center>
                    </div>
                  {{/if}}
                {{/each}}
            </div>
            <center>
              <h1>---------------------------------------------------------</h1>
            </center>
          {{else}}
            <center>
              <h1 style="color:#FF0000";><b>({{c.name}}) is currently turned off!</b></h1>
              <a href="/categories/update/{{c.id}}" class="active btn btn-primary">Toggle  ({{c.name}}) Back On!</a>
              <center>
                <h1>---------------------------------------------------------</h1>
              </center>
              <br>
            </center>
          {{/if}}
        {{/each}}
      </div>
    </div>
<!--#endregion -->

<!--#region if NOT logged in  -->
    {{else}}
      <div class="container-menu">
        <div class="grid-container-2">
          {{#each items as |c|}}
            {{#if c.switchy}}
              <center class="xxx">
                <a class="anchor" id="{{c.id}}"></a>
                <h1 class="yyy"><strong>{{c.name}}</strong></h1>
                <img src="{{c.image}}" alt="food-image" class="category-image">
              </center>
              <div class="grid-container">
                {{#each c.menuitems as |i|}}
                  {{#if i.switchy}}    
                    <div class="grid-item">
                      <a href="menu/{{i.id}}" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                          <h5 class="mb-1">{{i.name}}</h5> 
                        </div>

                        <div class="subitem">
                          <p class="mb-1">{{i.description}}</p>
                          <p class="mb-1">Starting price: {{i.price1}}</p>
                          <p class="mb-1"><b>Click for more information and options</b></p>
                          <br>
                          <img src={{i.image}} alt="food-image" class="category-image">  
                        </div> 
                      </a>
                    </div>
                  {{else}}
                    <div class="grid-item">
                      <center>
                        <h1 style="color:#FF0000";>
                          <b>({{i.name}}) is currently turned off!</b>
                        </h1>
                        <a href="/menuitems/update/{{i.id}}" class="active btn btn-primary">
                          Toggle  ({{i.name}}) Back On!
                        </a>
                        <br>
                      </center>
                    </div>
                  {{/if}}
                {{/each}}
              </div>
            {{/if}}
          {{/each}}
        </div>
      </div>
  {{/if}}
<!--#endregion -->

