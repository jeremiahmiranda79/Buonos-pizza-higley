<head>
  <link rel="stylesheet" href="/css/updateInformation.css">
</head>

<div class="information-background">
  <div class="container-information-header">
    <center>
      <h1>Update category</h1>
      <h4>For admin only</h4>
    </center>
  </div>

  <div class="container-update-item">
    <div class="container-fluid contact">
      <form id="updateCategory">   
        <div class="container py-3">
          <h2 class="py-3">Update ({{c.name}}) category</h2>
          <div class="forms">

            <label>
              <b style="color:#FF0000";>Please select or de-select to switch on or off!</b>
            </label>
            <br>
            <input 
              type="checkbox"
              id="switchy" 
              value="{{c.switchy}}"
            >
            <label>
              <span class="slider"></span>
              <b>{{c.name}}</b>
            </label>
            <br><br>
            <label 
							for="menu-item-name" 
							class="form-label"
						>
							<b>ID</b>
						</label>
						<input 
							id="id" 
							type="text" 
							class="form-control" 
							value="{{c.id}}" 
							placeholder="{{c.id}}"
						>
            <label 
              for="category-name" 
              class="form-label"
            >
              <b>Category name</b>
              <b style="color:#FF0000";>*required</b>
            </label>
            <input 
              id="name" 
              type="text" 
              class="form-control" 
              value="{{c.name}}" 
              placeholder="{{c.name}}" 
              required
            >
            <label 
              for="image" 
              class="form-label"
            >
              <b>Choose an image:</b>
              <b style="color:#FF0000";>*Please select the proper image for this category</b>
            </label>
            <select 
              id="image" 
              name="image" 
              class="form-select"
              require
            >
              <option value="{{c.image}}" selected>
                  Current ({{c.image}})
                </option>

              {{#each i as |x|}}
                <option 
                  value="{{x.url}}">{{x.name}}
                </option>
              {{/each}}
            </select>
            <input 
              type="hidden" 
              name="category-id" 
              value="{{c.id}}"
            />
          </div>
          <div class="d-flex justify-content-evenly">
            <button 
              type="submit" 
              class="btn btn-primary">
                Update
            </button>
            <button 
              class="btn btn-warning view-menu-button" onclick="history.back()"
            >
              Cancel
            </button> 
            <button 
              class="btn btn-danger" 
              id="deleteButton" 
              data-id="{{c.id}}">
              Delete
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
  
  <br><br><br><br><br><br><br>
  <br><br><br><br><br>
</div>

<script src="/js/updateCategory.js"></script>