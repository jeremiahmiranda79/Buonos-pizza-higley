<head>
  <link rel="stylesheet" href="/css/updateInformation.css">
</head>

<div class="information-background">
  <div class="container-information-header">
    <center>
      <h1>Create Pizza Topping</h1>
      <h4>For admin only</h4>
    </center>
  </div>
  <div class="container-update-item">
    <div class="container-fluid item">
      <form id="createToppingPizza">
        <div class="container py-3">
          <h2 class="">Pizza Toppings</h2>
          <button 
            class="btn btn-primary" 
            type="button" 
            data-bs-toggle="collapse" 
            data-bs-target="#collapsable-catgeory-list" 
            aria-expanded="false" 
            aria-controls="collapsable-catgeory-list">
            See all active pizza toppings
          </button>
          <div class="collapse" id="collapsable-catgeory-list">
            <div class="card card-body">
              <ul>
                {{#each tp as |x|}}  
                  <li>{{x.name}}</li>           
                {{/each}}
              </ul>
            </div>
          </div>
          <br><br>
          <div class="forms">
            <label 
              for="menu-item-name" 
              class="form-label"
            >
              <b>Name</b>
              <b style="color:#FF0000";>*required</b>
            </label>
            <input 
              id="name" 
              type="text" 
              class="form-control" 
              value="{{tp.name}}" 
              placeholder="Some Name..."
              required
            >
            <label 
              for="menu-item-description" 
              class="form-label"
            >
              <b>Price Full</b>
              <b style="color:#FF0000";>*required</b>
            </label>
            <input 
              id="priceFull" 
              type="text" 
              class="form-control" 
              value="{{tp.priceFull}}" 
              placeholder="0.00..."
              require
            >
            <label 
              for="menu-item-description" 
              class="form-label"
            >
              <b>Price Half</b>
              <b style="color:#FF0000";>*required</b>
            </label>
            <input 
              id="priceHalf" 
              type="text" 
              class="form-control" 
              value="{{tp.priceHalf}}" 
              placeholder="0.00..."
              require
            >
            <label 
              for="menu-item-description" 
              class="form-label"
            >
              <b>Price Slice</b>
              <b style="color:#FF0000";>*required</b>
            </label>
            <input 
              id="priceSlice" 
              type="text" 
              class="form-control" 
              value="{{tp.priceSlice}}" 
              placeholder="0.00..."
              require
            >
            <label 
              for="menu-item-description" 
              class="form-label"
            >
              <b>Price Gluten Free</b>
              <b style="color:#FF0000";>*required</b>
            </label>
            <input 
              id="priceGlutenFree" 
              type="text" 
              class="form-control" 
              value="{{tp.priceGlutenFree}}" 
              placeholder="0.00..."
              require
            >
          </div>
          <br><br>
        </div>
        <div class="d-flex justify-content-evenly">
          <button
            type="submit"
            class="btn btn-primary">
              Create
          </button>
          <button 
            class="btn btn-warning view-menu-button" 
            onclick="history.back()"
          >
            Cancel
          </button>
        </div>
      </form>
    </div>
  </div>
  <br><br><br><br>
</div>

<script src="/js/createToppingsPizza.js"></script>