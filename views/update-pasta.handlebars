<head>
  <link rel="stylesheet" href="/css/updateInformation.css">
</head>

<div class="information-background">
	<div class="container-information-header">
    <center>
      <h1>Update Pasta</h1>
      <h4>For admin only</h4>
    </center>
  </div>

	<div class="container-update-item">
		<div class="container-fluid item">
			<form id="updatePasta">
				<div class="container py-3">
					<h2 class="">Update ({{p.name}}) Pasta</h2>
					<div class="forms">
						<label 
							for="menu-item-name" 
							class="form-label"
						>
							<b>ID</b>
						</label>
						<input 
							id="id" 
							type="text" 
							class="form-control" 
							value="{{p.id}}" 
							placeholder="{{p.id}}"
						>
						<label 
							for="menu-item-name" 
							class="form-label"
						>
							<b>Name</b>
							<b style="color:#FF0000";>*required</b>
						</label>
						<input 
							id="name" 
							type="text" 
							class="form-control" 
							value="{{p.name}}" 
							placeholder="{{p.name}}"
							required
						>
						<label 
							for="menu-item-description" 
							class="form-label"
						>
							<b>Price 5 OZ</b>
							<b style="color:#FF0000";>*required</b>
						</label>
						<input 
							id="price5oz" 
							type="text" 
							class="form-control" 
							value="{{p.price5oz}}" 
							placeholder="{{p.price5oz}}"
							require
						>
						<label 
							for="menu-item-description" 
							class="form-label"
						>
							<b>Price 9 OZ</b>
							<b style="color:#FF0000";>*required</b>
						</label>
						<input 
							id="price9oz" 
							type="text" 
							class="form-control" 
							value="{{p.price9oz}}" 
							placeholder="{{p.price9oz}}"
							require
						>
						<input 
							type="hidden" 
							name="pasta-id" 
							value="{{p.id}}"
						/>
						<br><br>
					</div>	
					<div class="d-flex justify-content-evenly">
            <button 
							type="submit" 
							class="btn btn-primary"
						>
							Update
						</button>
            <button 
              class="btn btn-warning view-menu-button" onclick="history.back()"
            >
              Cancel
            </button>
            <button 
							class="btn btn-danger"
							id="deleteButton" 
							data-id="{{p.id}}"
						>
							Delete
						</button>
				</div>
			</form>
		</div>
	</div>	
</div>
<br><br><br><br><br><br><br><br>

<script src="/js/updatePasta.js"></script>