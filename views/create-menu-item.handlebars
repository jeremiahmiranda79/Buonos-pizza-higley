<head>
  <link rel="stylesheet" href="/css/updateInformation.css">
</head>

<div class="information-background">
	<div class="container-information-header">
    <center>
      <h1>Create Menu Item</h1>
      <h4>For admin only</h4>
    </center>
  </div>

	<div class="container-update-item">
		<div class="container-fluid item">
			<form id="createMenuItem">
				<div class="container py-3">
					<h2 class="">Menu Item</h2>
					<button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapsable-catgeory-list" aria-expanded="false" aria-controls="collapsable-catgeory-list">
            See all active menu items
          </button>
					<div class="collapse" id="collapsable-catgeory-list">
            <div class="card card-body">
              <ul>
                {{#each c as |x|}}  
                  <li>{{x.name}}</li>           
                {{/each}}
              </ul>
            </div>
          </div>
          <br><br>
					<div class="forms">
						<label 
							for="menu-item-name" 
							class="form-label"
						>
							<b>Menu item name</b>
							<b style="color:#FF0000";>*required</b>
						</label>
						<input 
							id="name" 
							type="text" 
							value="{{i.name}}" 
							class="form-control" 
							placeholder="Some name..."
							required
						>
						<input 
							type="hidden"
							name="cat-id" 
							value="{{i.id}}"
						/>
						<label 
							for="menu-item-description" 
							class="form-label"
						>
							<b>Menu item description</b>
							<b style="color:#FF0000";>*required</b>
						</label>
						<input 
							id="description" 
							type="text" 
							value="{{cat.description}}" class="form-control" 
							placeholder="Some description"
							required
						>
						<label 
              for="image" 
              class="form-label"
            >
              <b>Choose a category:</b>
              <b style="color:#FF0000";>*required</b>
            </label>
						<select 
              id="categories" 
              name="categories" 
              class="form-select"
            >
						{{!-- <option value="{{i.categoryId}}" selected>
                  Current ({{i.categoryId}})
                </option> --}}
              {{#each c as |x|}}
                <option 
                  value="{{x.id}}">{{x.name}}
                </option>
              {{/each}}
							require
            </select>
					</div>

					<div class="d-flex justify-content-evenly">
						<button
							type="submit"
							class="btn btn-primary"
						>
							Create
						</button>
						<button 
							class="btn btn-warning view-menu-button" onclick="history.back()"
						>
							Cancel
						</button>
					</div>
				</div>
			</form>
		</div>
	</div>
	
	<br><br><br><br><br><br><br>
  <br><br>
</div>

<script src="/js/createMenuItem.js"></script>